// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"name": "Go",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/go:1-1.22-bookworm",
	"features": {
		"ghcr.io/devcontainers-contrib/features/bash-command:1": {
			"command": "sed -i 's/deb.debian.org/mirrors.aliyun.com/g' /etc/apt/sources.list.d/debian.sources"
		}
	},

	"containerEnv":  {
		"GOPROXY": "https://goproxy.cn,direct",
		"DEBIAN_FRONTEND": "noninteractive"
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [8080],
	// "portsAttributes": {
	// 	"8080": {
	// 		"label": "http api",
	// 		"onAutoForward": "notify"
	// 	}
	// },
	
    "onCreateCommand": {
		"protobuf-compiler": "sudo apt update -yqq && sudo apt install -y --no-install-recommends protobuf-compiler",
		"plugins": "make tools"
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "",

	// A command to run each time the container is successfully started.
	// "postStartCommand": "go mod download",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.defaultProfile.osx": "zsh",
				"terminal.integrated.defaultProfile.windows": "zsh"
			},
			"extensions": [
				"golang.Go",
				"carlos-algms.make-task-provider",
				"oderwat.indent-rainbow",
				"bufbuild.vscode-buf",
				"github.vscode-github-actions",
				"GitHub.vscode-pull-request-github",
				"kennylong.kubernetes-yaml-formatter",
				"ms-vscode.makefile-tools"
			]
		}
	}
}